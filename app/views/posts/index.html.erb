<p id="notice"><%= notice %></p>

<h1>Posts</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td><%= link_to 'Show', post %></td>
        <td><%= link_to 'Edit', edit_post_path(post) %></td>
        <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% if params[:after].present? %>
  <% if @pagy.has_more? %>
    <%= link_to 'Next', url_for(after: @posts.last.id) %>
    <%= link_to 'Prev', url_for(before: @posts.first.id) %>
  <% end %>
<% else %>
  <% if @pagy.has_more? %>
    <%= link_to 'Prev', url_for(after: @posts.first.id) %>
    <%= link_to 'Next', url_for(before: @posts.last.id) %>
  <% end %>
<% end %>


